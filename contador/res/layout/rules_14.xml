        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="1" />

    <TextView
        android:id="@+id/tv_reglas14_subtitulo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_reglas14_text"
        android:layout_below="@+id/tv_reglas14_text"
        android:layout_marginTop="15dp"
        android:text="Influencia"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_reglas14_text2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/tv_reglas14_subtitulo2"
        android:layout_below="@+id/tv_reglas14_subtitulo2"
        android:text="En esta fase todos jugadores realizan por orden de turno acciones de influencia, empezando por el jugador inicial. Hasta que todos jugadores pasan consecutivamente Las acciones de influencia pueden afectar a cualquier jugador de la mesa."        
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="100" />    
    
