<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tv_reglas17_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:text="Reglas multijugador"
        android:textSize="30sp" />
    
    <TextView
        android:id="@+id/tv_reglas17_subtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_reglas17_titulo"
        android:layout_below="@+id/tv_reglas17_titulo"
        android:layout_marginTop="15dp"
        android:text="Reorganización"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_reglas17_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/tv_reglas17_subtitulo"
        android:layout_below="@+id/tv_reglas17_subtitulo"
        android:text="Idéntico a las reglas de 2 jugadores."        
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:maxLines="100" />

</RelativeLayout>